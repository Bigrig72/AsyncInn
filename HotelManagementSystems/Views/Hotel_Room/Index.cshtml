@model IEnumerable<HotelManagementSystems.Models.Hotel_Room>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Hotel Room Home Page</h1>
<h1>Total count of Hotel Rooms:@Html.ViewData.Model.Where(m => m.Hotel != null).Count()</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Room Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th>
                Pet Friendly
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th>
                Room Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PetFriendly)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumberID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.RoomNumberID, item.HotelID }) |
                @Html.ActionLink("Details", "Details", new { item.RoomNumberID, item.HotelID }) |
                @Html.ActionLink("Delete", "Delete", new { item.RoomNumberID, item.HotelID })
            </td>
        </tr>
        }
    </tbody>
</table>
