@model IEnumerable<HotelManagementSystems.Models.RoomAmentities>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amentities)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amentities.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.ID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.AmentitiesID, item.RoomID }) |
                @Html.ActionLink("Details", "Details", new { item.AmentitiesID, item.RoomID }) |
                @Html.ActionLink("Delete", "Delete", new { item.AmentitiesID, item.RoomID })
            </td>
        </tr>
}
    </tbody>
</table>
