@model IEnumerable<HotelManagementSystems.Models.Room>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Room Info</h1>
<h1>Total count of Rooms:@Html.ViewData.Model.Where(m => m.Name != null).Count()</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="rooms" asp-action="Index" method="get">
    <p>
        Room ID: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomAmentitiesID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roomlayout)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomAmentities)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomAmentitiesID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roomlayout)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomAmentities.Count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
